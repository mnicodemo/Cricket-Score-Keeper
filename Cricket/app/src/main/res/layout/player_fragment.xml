<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/EvenLine"
              android:layout_height="40dp">

    <EditText android:id="@+id/PlayerName_1"
              android:layout_width="124dp"
              android:textColor="@color/White"
              android:text="@string/Player1Name"
              android:layout_height="wrap_content"
        />
    <TextView android:id="@+id/PlayerScore_1"
              android:textColor="@color/White"
              android:text="0"
              android:layout_width="24dp"
              android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/GoalTitle"
              android:textColor="@color/White"
              android:text="Target"
              android:layout_width="64dp"
              android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/PlayerScore_2"
              android:textColor="@color/White"
              android:text="0"
              android:layout_width="37dp"
              android:layout_height="wrap_content"
        />

    <EditText android:id="@+id/PlayerName_2"
              android:textColor="@color/White"
              android:text="@string/Player2Name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"/>

</LinearLayout>