<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:id="@+id/LinearLayoutId"
              android:weightSum="1">

    <CheckBox android:id="@+id/cbP1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox android:id="@+id/cbP1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox android:id="@+id/cbP1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_plus"
            android:visibility="invisible"
            android:id="@+id/btnplus_p1"
            />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_minus"
            android:visibility="invisible"
            android:id="@+id/btnminus_p1"/>

    </LinearLayout>

    <EditText android:id="@+id/edP1NbrAddition"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"/>



    <TextView android:id="@+id/TVScoreAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:text="Score"
              android:width="35dp"
              android:layout_weight="0.94"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_plus"
            android:visibility="invisible"
            android:id="@+id/btnplus_p2"/>
        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_minus"
            android:visibility="invisible"
            android:id="@+id/btnminus_p2"/>

    </LinearLayout>
    <EditText android:id="@+id/edP2NbrAddition"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"/>

    <CheckBox android:id="@+id/cbP2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox android:id="@+id/cbP2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox android:id="@+id/cbP2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>